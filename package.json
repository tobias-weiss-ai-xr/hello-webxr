{
  "name": "pse",
  "version": "1.0.0",
  "description": "Periodic Table of Elements VR Experience - WebXR educational visualization",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_OPTIONS=--openssl-legacy-provider webpack-dev-server -d --host 0.0.0.0",
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider webpack -p",
    "watch": "cross-env NODE_OPTIONS=--openssl-legacy-provider webpack --watch",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui"
  },
  "keywords": [
    "webxr",
    "vr",
    "periodic-table",
    "chemistry",
    "education",
    "three.js",
    "ecsy"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ecsy": "0.2.6",
    "three": "^0.112.0",
    "three-obj-loader": "^1.1.3",
    "three-pointerlock": "0.0.2",
    "troika-3d-text": "^0.16",
    "webpack-dev-server": "^3.10.1",
    "webxr-polyfill": "^2.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@playwright/test": "^1.48.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^7.0.3",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  }
